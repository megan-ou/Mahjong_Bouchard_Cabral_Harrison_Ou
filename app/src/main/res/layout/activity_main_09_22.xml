<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Tutorial" />

        <Button
            android:id="@+id/btRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Restart" />

        <Button
            android:id="@+id/btPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Pause" />

        <Button
            android:id="@+id/btHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDiscardPile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Discard Pile: " />

            <EditText
                android:id="@+id/mLDiscard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:editable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="Deprecated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btSeePile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="See Pile" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iVLastDiscarded"
                    android:layout_width="35dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:src="@drawable/sticks_8" />

                <ImageView
                    android:id="@+id/iVDrawnCard"
                    android:layout_width="35dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btChow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Chow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btDiscardDrawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/bTDiscard" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iVCSlotT1"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/iVCSlotT2"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_7" />

                <ImageView
                    android:id="@+id/iVCSlotT3"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_8" />

                <ImageView
                    android:id="@+id/iVCSlotT4"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_9" />

                <ImageView
                    android:id="@+id/iVCSlotT5"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/sticks_1" />

                <ImageView
                    android:id="@+id/iVCSlotT6"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/sticks_2" />

                <ImageView
                    android:id="@+id/iVCSlotT7"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/sticks_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotT7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iVCSlotB1"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_6" />

                <ImageView
                    android:id="@+id/iVCSlotB2"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/dots_1" />

                <ImageView
                    android:id="@+id/iVCSlotB3"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/water" />

                <ImageView
                    android:id="@+id/iVCSlotB4"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/dots_7" />

                <ImageView
                    android:id="@+id/iVCSlotB5"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/flower" />

                <ImageView
                    android:id="@+id/iVCSlotB6"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/c_num_4" />

                <ImageView
                    android:id="@+id/iVCSlotB7"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/blank_tile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

                <edu.up.cs301.mahjong.MDButton
                    android:id="@+id/btDiscSlotB7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bTDiscard"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivKey"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/mahjong_key" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Draw New Card" />

    </LinearLayout>
</LinearLayout>